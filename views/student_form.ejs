    <title>Registration</title>
  </head>

  <body class="bg-dark">
    <nav
        class="navbar navbar-dark-sm navbar-expand bg-black sticky-top d-flex justify-content-between"
      >
        <div>
          <a href="https://cvr.ac.in"  target="_blank"><img id="cvr-logo" src="assets/logos/cvr.jpeg" /></a>
          <img id="ciencia-logo-inv" src="assets/logos/Logo-Loop.gif" />
        </div>

        <ul class="nav nav-navbar">
          <li class="nav-item">
            <a class="nav-link" href="/" id="nav-home">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/#about" id="nav-about">About</a>
          </li>
          <div class="dropdown me-3">
            <a
              class="btn btn-secondary dropdown-toggle bg-black text-primary"
              href="#"
              role="button"
              id="dropdownMenuLink-conv"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Conveners
            </a>

            <ul
              class="dropdown-menu bg-black"
              aria-labelledby="dropdownMenuLink-conv"
            >
              <li>
                <a class="dropdown-item text-primary" href="/#faculty-conveners"
                  >Faculty Conveners</a
                >
              </li>
              <li>
                <a class="dropdown-item text-primary" href="/#student-conveners"
                  >Student Conveners</a
                >
              </li>
            </ul>
          </div>
          <div class="dropdown">
            <a
              class="btn btn-secondary dropdown-toggle bg-black text-primary"
              href="#"
              role="button"
              id="dropdownMenuLink"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Events
            </a>

            <ul
              class="dropdown-menu bg-black"
              aria-labelledby="dropdownMenuLink"
            >
              <li>
                <a class="dropdown-item text-primary" href="/technical_events"
                  >Technical Events</a
                >
              </li>
              <li>
                <a
                  class="dropdown-item text-primary"
                  href="/non-technical_events"
                  >Non-Technical Events</a
                >
              </li>
              <li>
                <a class="dropdown-item text-primary" href="/special_events"
                  >Special Events</a
                >
              </li>
              <li>
                <a class="dropdown-item text-primary" href="/paper_presentation"
                  >Paper Presentation</a
                >
              </li>
              <li>
                <a class="dropdown-item text-primary" href="/project_expo"
                  >Project Expo</a
                >
              </li>
            </ul>
          </div>
          <!-- <li class="nav-item">
            <a class="nav-link" href="/#gallery" id="nav-gallery">Gallery</a>
          </li> -->
          <li class="nav-item">
            <a class="nav-link" href="/#contact-us" id="nav-cu">Contact Us</a>
          </li>
          <li class="nav-item">
            <a href="/register" class="nav-link">Register!</a>
          </li>
        </ul>
      </nav>

    <section class="vh-100 gradient-custom">
      <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
          <div class="col-12 col-lg-9 col-xl-7">
            <div
              class="card shadow-2-strong card-registration"
              style="border-radius: 15px"
            >
              <div class="card-body p-4 p-md-5">
                <div class="d-flex flex-column align-items-center">
                  <img
                    src="assets/logos/C2k22B.png"
                    style="height: 150px; width: 350px"
                  />
                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
                </div>
                <% if(errors.length>0){ %>
                  <div class="alert alert-danger alert-dismissible fade show">
                    <ul>
                    <% for(i=0; i<errors.length; i++){ %>
                      <li> <%= errors[i].msg %></li>
                      <% } %>
                    </ul>
                  </div>
                  <% } %>
                <form action="" method="POST">
                  <div class="row">
                    <div class="col-lg mb-4">
                      <div class="form-outline">
                        <input
                          type="text"
                          id="name"
                          class="form-control form-control-lg"
                          name="name"
                        />
                        <label class="form-label" for="firstName">Name</label>
                      </div>
                    </div>
                  </div>
                  
                  <div class="row">
                    <div class="col-md-6 mb-4 d-flex align-items-center">
                      <div class="form-outline datepicker w-100">
                        <input
                          type="date"
                          class="form-control form-control-lg"
                          id="birthdayDate"
                          name="dob"
                        />
                        <label for="birthdayDate" class="form-label"
                          >Birthday</label
                        >
                      </div>
                    </div>
                    <div class="col-md-6 mb-4">
                      <h6 class="mb-2 pb-1">Gender:</h6>

                      <div class="form-check form-check-inline">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="gender"
                          id="femaleGender"
                          value="female"
                          checked
                        />
                        <label class="form-check-label" for="femaleGender"
                          >Female</label
                        >
                      </div>

                      <div class="form-check form-check-inline">
                        <input
                          class="form-check-input"
                          type="radio"
                          name="gender"
                          id="maleGender"
                          value="male"
                        />
                        <label class="form-check-label" for="maleGender"
                          >Male</label
                        >
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6 mb-4 pb-2">
                      <div class="form-outline">
                        <input
                          type="email"
                          id="emailAddress"
                          class="form-control form-control-lg"
                          name="email"
                        />
                        <label class="form-label" for="emailAddress"
                          >Email</label
                        >
                      </div>
                    </div>
                    <div class="col-md-6 mb-4 pb-2">
                      <div class="form-outline">
                        <input
                          type="tel"
                          id="phoneNumber"
                          class="form-control form-control-lg"
                          name="phone"
                        />
                        <label class="form-label" for="phoneNumber"
                          >Phone Number</label
                        >
                      </div>
                    </div>
                  </div>

                  <div class="d-flex mt-4 pt-2 justify-content-center">
                    <button
                      class="btn btn-primary btn-lg me-5 shadow bg-success"
                    >
                      Submit
                    </button>
                    <button
                      class="btn btn-primary btn-lg shadow bg-primary"
                      type="reset"
                    >
                      Reset
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
